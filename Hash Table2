
#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include <stdint.h>
#include <stdbool.h>

#define MAX_NAME 256
#define TABLE_SIZE 10

typedef struct {
    char name[MAX_NAME];
    int age;
}person;

person* hash_table[TABLE_SIZE];

unsigned int hash(char* name){
    int l = strnlen(name, MAX_NAME);
    unsigned int hash_value = 0;
    for(int i = 0; i < l; i++){
        hash_value += name[i];
        hash_value = (hash_value * name[i]) % TABLE_SIZE;
    }
    return hash_value;
}

void init_hash_table(){
    for(int i = 0; i < TABLE_SIZE; i++){
        hash_table[i] = NULL;
    }
}

void print_table(){
    for(int i = 0; i < TABLE_SIZE; i++){
        (hash_table[i] == NULL) ? printf("\t%i\t---\n", i) : printf("\t%i\t%s\n", i, hash_table[i]->name);
    }
}

bool hash_table_insert(person *p){
    if(p == NULL){
        return false;
    }
    int index = hash(p->name);
    if(hash_table[index] != NULL){
        return false;
    }
    hash_table[index] = p;
    return true;
}

int main() {

    person Aditya = {.name = "Aditya", .age = 21};
    person Juli = {.name = "Juli", .age = 21};
    person arman = {.name = "arman", .age = 22};
    person abu = {.name = "abu", .age = 22};
    person abuk = {.name = "abuk", .age = 22};
    
    hash_table_insert(&Aditya);
    hash_table_insert(&Juli);
    hash_table_insert(&arman);
    hash_table_insert(&abu);
    hash_table_insert(&abuk);
    print_table();



    return 0;
}
